{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
